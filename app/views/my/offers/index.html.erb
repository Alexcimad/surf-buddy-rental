<div class="container">
  <h1 class="mt-3 mb-3">My boards</h1>

  <% if @offers.exists? %>
    <% @offers.each do |offer| %>
      <div class="card-product mb-3">
        <%= cl_image_tag(offer.photos.first.key, height: 300, width: 400, crop: :fill) %>
        <div class="card-product-infos">
          <h2><%= offer.title %></h2>
          <p>State :<strong><%= offer.state %></strong></p>
          <p><%=icon('fas','map-marker-alt')%><%= offer.location %></p>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>You don't have offers yet</p>
  <% end %>
</div>
