<div class="container">
    <nav aria-label="breadcrumb breadcrumb-custom">
      <ol class="breadcrumb breadcrumb-custom">
        <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
        <li class="breadcrumb-item active" aria-current="page">My boards</li>
      </ol>
    </nav>
  <h1 class="mt-3 mb-3">My boards</h1>

  <% if @offers.exists? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Titre</th>
          <th scope="col">State</th>
          <th scope="col">Location</th>
          <th scope="col">Price</th>
          <th scope="col">Disponibility</th>
          <th scope="col">Start date</th>
          <th scope="col">End date</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @offers.each_with_index do |offer, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td scope="col"><%= offer.title %></td>
          <td scope="col"><%= offer.state %></td>
          <td scope="col"><%= offer.location %></td>
          <td scope="col"><%= offer.price_per_date %>â‚¬</td>
          <td scope="col"><%= offer.start_available_date.strftime("%b %d ,%Y") %></td>
          <td scope="col"><%= offer.end_available_date.strftime("%b %d ,%Y") %></td>
          <th scope="col">Available</th>
          <td scope="col">
            <%= link_to offer_path(offer), class: "btn btn-flat btn-cta p-2" do %>
              <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_offer_path(offer), class: "btn btn-flat btn-cta p-2" do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to offer_path(offer), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-flat btn-cta p-2" do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <p><%= link_to "Add an other board ðŸ¤™", new_offer_path, class: "btn btn-primary", id:"btn-create-offer" %></p>
  <% else %>
    <p>You don't have offers yet</p>
    <%= link_to "Add a board ðŸ¤™", new_offer_path, class: "btn btn-primary", id:"btn-create-offer" %>
  <% end %>
</div>
