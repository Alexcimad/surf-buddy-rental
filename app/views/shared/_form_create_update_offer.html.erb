<div class="row">
  <div class="col-md-6">
    <div class="m-5">
      <h1 class="text-center m-5">Create your rental offer here:</h1>
        <%= simple_form_for @offer do |f| %>
        <div class="m-2">
          <p><%= f.input :title, label: :Title %></p>
          <%= f.input :state, label: "Board state"%>
          <p><%= f.input :description,label: :Description, :input_html => {:style => 'width: 100%', :rows => 3 } %></p>
          <p><%= f.input :price_per_date, label: "Price per day"%></p>

          <h4>Availability</h4>
          <div class="d-flex justify-content-between">
            <p class="date mr-2"><%= f.label "From :" %> <%= f.date_field :start_available_date %></p>
            <p class="date ml-2"><%= f.label "To :" %> <%= f.date_field :end_available_date %></p>
          </div>
          <%= f.input :location %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        </div>

            <div class="row">
              <div><%= link_to "Cancel", root_path, class: "btn btn-flat m-2" %></div>
              <div><%= f.submit "Confirm", class: "btn btn-flat m-2"%></div>
            </div>
        <% end %>
    </div>
  </div>
  <div class="col-8 col-md-6 form-bg"></div>
