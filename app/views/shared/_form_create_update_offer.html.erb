<div class="row">
  <div class="col-md-6">
      <nav aria-label="breadcrumb breadcrumb-custom">
      <ol class="breadcrumb breadcrumb-custom">
        <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
        <li class="breadcrumb-item"><%= link_to "My boards", my_offers_path %></li>
        <li class="breadcrumb-item active" aria-current="page">Add or Edit a board</li>
      </ol>
    </nav>
    <div class="m-5">
      <h1 class="text-center m-5">Add or Edit your surfboard to rent here:</h1>
        <%= simple_form_for @offer do |f| %>
        <div class="m-2">
          <p><%= f.input :title, label: :Title %></p>
          <%= f.input :state, collection: ["Perfect state", "Good state", "Average state", "Bad state but functional"], label: "Board state"%>
          <p><%= f.input :description,label: :Description, :input_html => {:style => 'width: 100%', :rows => 3 } %></p>
          <p><%= f.input :price_per_date, label: "Price per day (â‚¬)"%></p>
          <div class="d-flex justify-content-between">
            <p class="input_custom mr-2"><%= f.label "From :" %> <%= f.date_field :start_available_date, class:"calendar-pick form-control" %></p>
            <p class="input_custom ml-2"><%= f.label "To :" %> <%= f.date_field :end_available_date, class:"calendar-pick form-control" %></p>
          </div>
          <%= f.input :location %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        </div>

            <div class="row">
              <div><%= link_to "Cancel", root_path, class: "btn btn-flat btn-cta m-2" %></div>
              <div><%= f.submit "Confirm", class: "btn btn-flat btn-cta m-2"%></div>
            </div>
        <% end %>
    </div>
  </div>
  <div class="col-8 col-md-6 form-bg"></div>
