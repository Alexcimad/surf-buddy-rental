<div class="container">
    <div class="card-offer-detail">
        <%= cl_image_tag(@offer.photos.first.key, height: 300, width: 400, crop: :fill) %>
        <div class="card-offer-detail-description">
          <div>
              <h2><%=@offer.title%></h2>
              <p><%=@offer.description%></p>
              <p><%=icon('fas','calendar-alt')%>Start date : <%=@offer.start_available_date%></p>
              <p><%=icon('fas','calendar-alt')%>End date : <%=@offer.end_available_date%></p>
              <p> <%=icon('fas','map-marker-alt')%> Biarritz</p>
          </div>
          <h2 class="card-offer-pricing"><%=@offer.price_per_date%>â‚¬ / Jour</h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-user avatar-bordered" />
        </div>
    </div>
    <%= link_to "Book this board", new_offer_booking_path(@offer), class: "btn btn-primary btn-custom-blue mt-2"%>
    <%= link_to "Back to offer list", offers_path, class: "btn btn-primary btn-custom-blue mt-2"%>
 
 
  <% @offer.photos.each do |photo| %>
    <%= cl_image_tag(photo.key, height: 50, width: 50, crop: :fill) %>
  <%end %>


  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @offer.photos.count.times do |i| %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= i == 0 ? 'active' : '' %>"></li>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <% @offer.photos.each_with_index do |photo, index| %>
        <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
          <%= cl_image_tag(photo.key, height: 300, width: 300, crop: :fill) %>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>




