<div class="container">
    <div class="card-offer-detail">

<%# -----CAROUSEL----- %>
      <div class="card-offer-detail-carousel">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <% @offer.photos.count.times do |i| %>
              <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= i == 0 ? 'active' : '' %>"></li>
            <% end %>
          </ol>
          <div class="carousel-inner">
            <% @offer.photos.each_with_index do |photo, index| %>
              <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
                <%= cl_image_tag(photo.key, class: 'carousel-imagetag', crop: :fill) %>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
<%# --------DESCRIPTION------- %>
        <div class="card-offer-detail-description">
          <div class="lines">
              <div id="lines-header">
                <h2><%=@offer.title%></h2>
                <p> <%=icon('fas','map-marker-alt')%> <%=@offer.location%></p>
                <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="avatar-bordered" />
              </div>
              <div>
                <p><%=@offer.description%></p>
              </div>
              <div>
                <p> <%=icon('fas','calendar-alt')%> du <%=@offer.start_available_date%> au <%=@offer.end_available_date%></p>
                <p><%=icon('fas','calendar-alt')%>Start date : <%=@offer.start_available_date%></p>
                <p><%=icon('fas','calendar-alt')%>End date : <%=@offer.end_available_date%></p>
              </div>
          </div>
          <h2 class="card-offer-pricing"><%=@offer.price_per_date%>â‚¬ / Jour</h2>
        </div>
    </div>

<%# -------LINKS------- %>
    <%= link_to "Book this board", new_offer_booking_path(@offer), class: "btn btn-primary btn-custom-blue mt-2"%>
    <%= link_to "Back to offer list", offers_path, class: "btn btn-primary btn-custom-blue mt-2"%>
    <% if @offer.user == current_user %>
        <%= link_to "Edit this offer", edit_offer_path(@offer), class: "btn btn-primary btn-custom-blue mt-2"%>
        <%= link_to "Delete this offer", offer_path(@offer), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary btn-custom-blue mt-2" %>
     <% end %>

  <% @offer.photos.each do |photo| %>
    <%= cl_image_tag(photo.key, height: 50, width: 50, crop: :fill) %>
  <%end %>
</div>
