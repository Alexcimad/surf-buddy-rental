<div class="container">
  <div class="card-offer-detail">

    <%# -----CAROUSEL----- %>
      <div class="card-offer-detail-carousel">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <% @offer.photos.count.times do |i| %>
              <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= i == 0 ? 'active' : '' %>"></li>
            <% end %>
          </ol>
          <div class="carousel-inner">
            <% @offer.photos.each_with_index do |photo, index| %>
              <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
                <%= cl_image_tag(photo.key, class: 'carousel-imagetag', crop: :fill) %>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

  <%# --------DESCRIPTION------- %>
        <div class="card-offer-detail-description">
          <div class="lines">
              <div id="lines-header">
                <div id="lines-header-title">
                  <h1><%= @offer.title %></h1>
                  <p> <%=icon('fas','map-marker-alt')%> <%=@offer.location%></p>
                </div>
                <div id="lines-header-photo">
                  <%if @offer.user.photo.attached? %>
                      <%= cl_image_tag(@offer.user.photo.key, crop: :fill, :gravity => :face, class: "lines-photo avatar-bordered")%>
                    <%else%>
                      <%= image_tag "https://cdn.pixabay.com/photo/2017/05/22/19/49/surfer-2335087_960_720.jpg", class: "lines-photo avatar-bordered" %>
                    <%end%>
                </div>
              </div>
              <div>
                <h4>State : <strong><%= @offer.state %></strong></h4>
                <hr>
                <h4>Description :</h4>
                <p><%=@offer.description %></p>
              </div>
              <div id="lines-footer">
                <p> <%=icon('fas','calendar-alt')%> From <%= @offer.start_available_date %> To <%= @offer.end_available_date %></p>
                <h2 id="card-offer-pricing"><%= @offer.price_per_date %>â‚¬ / day</h2>
              </div>
              <% if @offer.user == current_user %>
              <% else %>
              <%= link_to "Book this board", new_offer_booking_path(@offer), class: "btn btn-primary btn-custom-blue mt-2"%>
              <% end %>
          </div>
        </div>
      </div>

  <%# -------LINKS------- %>
  <div class="modal-footer">
    <%= link_to "Back to offer list", offers_path, class: "btn btn-primary btn-custom-blue mt-2"%>
    <% if @offer.user == current_user %>
      <%= link_to "Edit this offer", edit_offer_path(@offer), class: "btn btn-primary btn-custom-blue mt-2"%>
      <%= link_to "Delete this offer", offer_path(@offer), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary btn-custom-blue mt-2" %>
    <% end %>
  </div>
</div>
