<div class="row">
  <div class="col-md-6">
    <div class="m-5">
      <h1 class="text-center m-5">Proposer mon matériel</h1>
        <%= simple_form_for @offer do |f| %>
        <div class="m-2">
          <p><%= f.label "Titre de l'annonce :" %><%= f.text_field :title %></p>
          <p><%= f.input :description,:input_html => {:style => 'width: 100%', :rows => 3 } %></p>
          <p><%= f.label "prix :" %> <%= f.number_field :price_per_date %></p>

          <h4>Disponibilités</h4>
          <div class="d-flex justify-content-between">
            <p class="date mr-2"><%= f.label "du :" %> <%= f.date_field :start_available_date %></p>
            <p class="date ml-2"><%= f.label "au :" %> <%= f.date_field :end_available_date %></p>
          </div>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        </div>

            <div class="row">
              <div><%= link_to "Annuler", root_path, class: "btn btn-flat m-2" %></div>
              <div><%= f.submit "Mettre en location", class: "btn btn-flat m-2"%></div>
            </div>
        <% end %>
    </div>
  </div>
  <div class="col-8 col-md-6 form-bg"></div>
</div>
