<div class="container">
    <%= simple_form_for @offer do |f| %>

    <p><%= f.label :title %></p>
    <p><%= f.text_field :description %></p>
    <p><%= f.number_field :price_per_date %></p>
    <p><%= f.date_field :start_available_date %></p>
    <p><%= f.date_field :end_available_date %></p>
    <p><%= f.input :photo, as: :file %></p>
    <p><%= f.submit %></p>
    <% end %>
</div>